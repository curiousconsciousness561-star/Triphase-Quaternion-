import numpy as np

def triphase_quaternion(theta, phi, psi):
    """Triphase quaternion: normalized sum of three phase exponentials."""
    v_real = np.cos(theta) + np.cos(phi) + np.cos(psi)
    v_i = np.sin(theta)
    v_j = np.sin(phi)
    v_k = np.sin(psi)
    v = np.array([v_real, v_i, v_j, v_k])
    norm_sq = 3 + 2*(np.cos(theta-phi) + np.cos(theta-psi) + np.cos(phi-psi))
    if norm_sq <= 0:  # Should never happen for random sampling (measure zero)
        return np.array([1.0, 0, 0, 0])  # Fallback to identity
    return v / np.sqrt(norm_sq)

def random_triphase(n=1):
    """Generate n random triphase quaternions."""
    phases = np.random.uniform(0, 2*np.pi, size=(n, 3))
    return np.array([triphase_quaternion(*p) for p in phases])
